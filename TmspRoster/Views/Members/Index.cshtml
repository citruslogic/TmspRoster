@model IEnumerable<TmspRoster.Models.Member.Member>

@{
    ViewBag.Title = "TMSP ROSTER";
}

<h2>Roster</h2>

@if (ViewBag.IsPrivileged)
{
    <p>
        @Html.ActionLink("Add New Member", "Create")
    </p>
}

<div class="extra-control">
    @using (Html.BeginForm("Index", "Members", FormMethod.Get))
    {
        @Html.DropDownList("locationFilter", new SelectList(ViewBag.Location), new { @class = "form-control" })
        <input type="submit" value="Filter" style="background-color: darkgray; color: white;" />
    }
</div>
<br />
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstMidName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Territory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JoinDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlateNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Territory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoinDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlateNumber)
            </td>
            <td>
                @if (ViewBag.IsPrivileged)
                {@Html.ActionLink("Edit", "Edit", new { id = item.MemberID }) @Html.Raw("| ")}
                @Html.ActionLink("Details", "Details", new { id = item.MemberID })
                @if (ViewBag.IsPrivileged)
                {@Html.Raw("| ") @Html.ActionLink("Delete", "Delete", new { id = item.MemberID })}
            </td>
        </tr>
    }

</table>
